<div class="page-content-wrapper ">

  <div class="container-fluid">

    <div class="row">
      <div class="col-sm-12">
        <div class="page-title-box">
          <div class="row align-items-center">
            <div class="col-md-8">
              <h4 class="page-title m-0">جدول آزمون ها</h4>
            </div>

            <!-- end col -->
          </div>
          <!-- end row -->
        </div>
        <!-- end page-title-box -->
      </div>
    </div>
    <!-- end page title -->

    <div class="row">
      <div class="col-12">
        <div class="card m-b-30">
          <div class="card-body">

            <h4 class="mt-0 header-title"> دانش اموز عزیز</h4>
            <p class="text-muted m-b-30 font-14">
              نمرات سوالاتی که شما پاسخ داده اید </p>
            <% if(answers.length>0){ %>
            <% for(let a of answers){ %>
            <p><%- a.question.body %> </p>%>

            <div class="table-rep-plugin">
              <div class="table-responsive b-0" data-pattern="priority-columns">
                <table id="tech-companies-1" class="table  table-striped">
                  <thead>
                    <tr>
                      <th data-priority="1" style="width: 85%;">جواب</th>
                      <th data-priority="1" style="width: 15%;">نمره</th>
                      <th data-priority="1"></th>

                    </tr>
                  </thead>

                  <tbody>

                    <tr>
                      <td><%= a.body%></td>
                      <td><%= a.mark %> </td>
                    </tr>



                  </tbody>

                </table>
              </div>

            </div>
            <% } %>
            <% } %>


          </div>
        </div>
      </div> <!-- end col -->
    </div> <!-- end row -->

  </div><!-- container fluid -->

</div> <!-- Page content Wrapper -->

<script>
  $(function() {
    $('.table-responsive').responsiveTable({
      addDisplayAllBtn: 'btn btn-secondary'
    });
  });
</script>