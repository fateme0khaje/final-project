 <!-- Regular Course area  -->

 <section class="home-ragular-course pb-100">
   <div class="container">
     <div class="section-tittle text-center">
       <h2>دوره های آموزشی </h2>
       <p>
         مجموعه ما با دارا بودن مجرب ترین اساتید در همه سطوح دوره برگزار می کند
       </p>
     </div>

     <div class="row">
       <% if(courses.length>0){ %>
       <% for(let course of courses){  %>
       <div class="col-lg-4 col-md-6">
         <div class="single-ragular-course">
           <div class="course-img">
             <img src="/assets/images/courses/course.png" alt="ragular" />
             <h2><%= course.title %> </h2>
           </div>
           <div class="course-content">
             <p>
               <%- truncateTo200(course.body)%>...
             </p>
             <a href="/course?courseId=<%= course.id%>" class="border-btn">ادامه مطلب</a>
           </div>
         </div>
       </div>

       <% } %>
       <% } %>



     </div>
   </div>
 </section>

 <!-- End Regular Course area  -->



