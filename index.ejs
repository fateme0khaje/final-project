 <!-- Teachers Area -->
 <section class="home-teachers-area">
   <div class="container">
     <div class="section-tittle text-center">
       <h2>اساتید محترم</h2>
       <p>
         موسسه آموزشی پرتو بهترین اساتید را برای تمام سطوح دارد
       </p>
     </div>

     <div class="row">
       <% if(teachers.length>0){ %>
       <% for(let teacher of teachers){ %>
       <div class="col-lg-3 col-sm-6">
         <div class="single-home-teacher">
           <div class="teacher-img">
             <a href="/teachers">
               <img src="/assets/images/teachers/<%= teacher.image%>" alt="teacher" /></a>
           </div>
           <div class="teachers-content">
             <h2><%= teacher.fullname %></h2>
             <p><%= teacher.level %> </p>
           </div>
           <div class="teacher-social">
             <ul>
               <li>
                 <a href="#"><i class="flaticon-facebook"></i></a>
               </li>
               <li>
                 <a href="#"><i class="flaticon-twitter"></i></a>
               </li>
               <li>
                 <a href="#"><i class="flaticon-envelope"></i></a>
               </li>
               <li>
                 <a href="#"><i class="fa fa-long-arrow-alt-left"></i></a>
               </li>
             </ul>
           </div>
         </div>
       </div>
       <% } %>
       <% } %>
     </div>
   </div>
 </section>
 <!-- End Teachers Area -->