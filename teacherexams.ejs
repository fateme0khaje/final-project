<div class="page-content-wrapper ">

  <div class="container-fluid">

    <div class="row">
      <div class="col-sm-12">
        <div class="page-title-box">
          <div class="row align-items-center">
            <div class="col-md-8">
              <h4 class="page-title m-0">جدول آزمون ها</h4>
            </div>

            <!-- end col -->
          </div>
          <!-- end row -->
        </div>
        <!-- end page-title-box -->
      </div>
    </div>
    <!-- end page title -->

    <div class="row">
      <div class="col-12">
        <div class="card m-b-30">
          <div class="card-body">

            <h4 class="mt-0 header-title">استاد عزیز !</h4>
              برای نمایش پاسخ های زبان آموزان روی دکمه مربوطه کلیک کنید
           <br/>
              <div class="table-rep-plugin">
              <div class="table-responsive b-0" data-pattern="priority-columns">
                <table id="tech-companies-1" class="table  table-striped">
                  <thead>
                    <tr>
                      <th data-priority="2" style="width: 25%;">نام</th>
                      <th data-priority="3">سطح آزمون</th>
                     <!-- <th data-priority="1" style="width: 30%;">استاد مربوطه</th> -->
                      <th data-priority="6" style="width: 5%;"></th>

                    </tr>
                  </thead>
                  <% if( exams.length>0){ %>
                  <tbody>
                    <% for(exam of exams){ %>
                    <tr>
                      <th><%=exam.name%></th>
                      <td><%= exam.level %> </td>
                      <td><% if(exam.teacher){ %>
                        <%= exam.teacher.fullname %>
                        <% }else{ %>
                        استاد ازمون را انتخاب نکرده اید
                        <% } %>
                      </td>
                      <th data-priority="6"><a href="/teacherdash/questionsandanswers?examId=<%=exam.id%>" class="btn btn-primary" type="submit"> نمایش سوالات و جواب ها</a></th>
                    </tr>
                    <% } %>



                  </tbody>
                  <% }  else{ %>
                  <tbody>
                    <tr>
                      <p>هیچ آزمونی در پایگاه داده یافت نشد</p>
                    </tr>
                  </tbody>

                  <% } %>
                </table>
              </div>

            </div>

          </div>
        </div>
      </div> <!-- end col -->
    </div> <!-- end row -->

  </div><!-- container fluid -->

</div> <!-- Page content Wrapper -->

<script>
  $(function() {
    $('.table-responsive').responsiveTable({
      addDisplayAllBtn: 'btn btn-secondary'
    });
  });
</script>